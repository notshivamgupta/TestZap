<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/linearhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/subjectpart"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_marginLeft="20dp"
                android:id="@+id/Subjecticon"
                android:layout_width="wrap_content"
                android:src="@drawable/icondrawhistory"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subjectname"
                android:text="SUBJECT : "
                android:layout_marginLeft="10dp"
                android:textColor="#3F2548"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/subjectfromfirestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Knowledge"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#3F2548"
             />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setpart"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_marginLeft="20dp"
                android:id="@+id/Seticon"
                android:layout_width="wrap_content"
                android:src="@drawable/icon2drawhistory"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setname"
                android:text="SET : "
                android:layout_marginLeft="10dp"
                android:textColor="#3F2548"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/setfromfirestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#3F2548"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timepart"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:id="@+id/timehistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timehistory"
                />
            <TextView
                android:id="@+id/timetakenhistory"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1M 46S"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/correctpart"
            android:layout_width="wrap_content"
            android:text="8"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="275dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/totalaprt"
            android:layout_width="wrap_content"
            android:text="/10"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="290dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="275dp"
            />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="240dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>