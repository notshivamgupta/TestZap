<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    android:outlineSpotShadowColor="#000000"
    android:layout_weight="1"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/linearhistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/subjectpart"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_marginLeft="20dp"
                android:id="@+id/Subjecticon"
                android:layout_width="wrap_content"
                android:src="@drawable/icondrawhistory"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subjectname"
                android:text="SUBJECT : "
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="#3F2548"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/subjectfromfirestore"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="General Knowledge"
                android:textColor="#3F2548"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setpart"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_height="wrap_content">

            <ImageView

                android:layout_marginLeft="20dp"
                android:id="@+id/Seticon"
                android:layout_width="wrap_content"
                android:src="@drawable/icon2drawhistory"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setname"
                android:text="TYPE : "
                android:layout_marginLeft="10dp"
                android:textColor="#3F2548"
                android:fontFamily="@font/poppins"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/setfromfirestore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="17dp"
                android:textColor="#3F2548"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/timepart"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/timehistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/timehistory"
                />

            <TextView
                android:id="@+id/timetakenhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1m 46s"

                android:textColor="#000000"
                android:textSize="25dp"
                android:fontFamily="@font/poppins_semibold" />
        </LinearLayout>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="240dp"
            android:layout_width="200dp"
            android:layout_height="110dp"
            />

        </RelativeLayout>
</androidx.cardview.widget.CardView>